<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-md-3 offset-md-1">
                <ul class="list-group list-group-flush">
                    <a href="/mysettings" class="list-group-item list-group-item-action active"
                        aria-current="true">Manage Account</a>
                    <a href="/mytrips" class="list-group-item list-group-item-action">Bookings & Trips</a>
                    <a href="/myreviews" class="list-group-item list-group-item-action">Reviews</a>
                    <a href="/mywishlist" class="list-group-item list-group-item-action">Saved</a>
                </ul>
            </div>

            <div class="card mb-3 col-md-6">
                <div class="card-body">
                    <h1 class="card-title">
                        My Settings
                    </h1>
                    <p class="card-text">
                        Personal accounts settings
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <div class="row mb-3">
                            <div class="col">
                                <strong>Full name</strong>
                            </div>
                            <div class="col">
                                <%= currentUser.fullName %>
                            </div>
                            <div class="col d-grid d-md-flex justify-content-md-end">
                                <button class="btn btn-outline-info btn-sm" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseFullName" aria-expanded="false"
                                    aria-controls="collapseFullName">
                                    Edit
                                </button>
                            </div>
                        </div>
                        <div class="mb-3 collapse" id="collapseFullName">
                            <form action="/mysettings/update?_method=PUT" method="POST">

                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control" name="user[fullName]"
                                        placeholder="Full name" aria-describedby="button-save">
                                    <button class="btn btn-outline-success" type="submit" id="button-save">Save</button>
                                </div>
                            </form>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row mb-3">
                            <div class="col">
                                <strong>Username</strong>
                            </div>
                            <div class="col">
                                <%= currentUser.username %>
                            </div>
                            <div class="col d-grid d-md-flex justify-content-md-end">
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row mb-3">
                            <div class="col">
                                <strong>Password</strong>
                            </div>
                            <div class="col">
                                <%= currentUser.password %>
                            </div>
                            <div class="col d-grid d-md-flex justify-content-md-end">
                                <!-- <button class="btn btn-outline-info btn-sm" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapsePassword" aria-expanded="false"
                                    aria-controls="collapsePassword">
                                    Edit
                                </button> -->
                            </div>
                        </div>
                        <!-- <div class="mb-3 collapse" id="collapsePassword">
                            <form action="/mysettings/update?_method=PUT" method="POST">
                                <div class="input-group input-group-sm">
                                    <input type="password" class="form-control" name="user[password]"
                                        placeholder="Password" aria-describedby="button-save">
                                    <button class="btn btn-outline-success" type="submit" id="button-save">Save</button>
                                </div>
                            </form>
                        </div> -->
                    </li>
                    <li class="list-group-item">
                        <div class="row mb-3">
                            <div class="col">
                                <strong>Email address</strong>
                            </div>
                            <div class="col">
                                <%= currentUser.email %>
                            </div>
                            <div class="col d-grid d-md-flex justify-content-md-end">
                                <button class="btn btn-outline-info btn-sm" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseEmail" aria-expanded="false" aria-controls="collapseEmail">
                                    Edit
                                </button>
                            </div>
                        </div>
                        <div class="mb-3 collapse" id="collapseEmail">
                            <form action="/mysettings/update?_method=PUT" method="POST">
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control" name="user[email]"
                                        placeholder="Email address" aria-describedby="button-save">
                                    <button class="btn btn-outline-success" type="submit" id="button-save">Save</button>
                                </div>
                            </form>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row mb-3">
                            <div class="col">
                                <strong>Phone number</strong>
                            </div>
                            <div class="col">
                                <%= currentUser.phone %>
                            </div>
                            <div class="col d-grid d-md-flex justify-content-md-end">
                                <button class="btn btn-outline-info btn-sm" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapsePhone" aria-expanded="false" aria-controls="collapsePhone">
                                    Edit
                                </button>
                            </div>
                        </div>
                        <div class="mb-3 collapse" id="collapsePhone">
                            <form action="/mysettings/update?_method=PUT" method="POST">
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control" name="user[phone]"
                                        placeholder="Phone number" aria-describedby="button-save">
                                    <button class="btn btn-outline-success" type="submit" id="button-save">Save</button>
                                </div>
                            </form>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row mb-3">
                            <div class="col">
                                <strong>Date of birth</strong>
                            </div>
                            <div class="col">
                                <%= currentUser.birthday %>
                            </div>
                            <div class="col d-grid d-md-flex justify-content-md-end">
                                <button class="btn btn-outline-info btn-sm" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseBirthday" aria-expanded="false"
                                    aria-controls="collapseBirthday">
                                    Edit
                                </button>
                            </div>
                        </div>
                        <div class="mb-3 collapse" id="collapseBirthday">
                            <form action="/mysettings/update?_method=PUT" method="POST">
                                <div class="input-group input-group-sm">
                                    <input type="date" class="form-control" name="user[birthday]"
                                        placeholder="Date of birth" aria-describedby="button-save">
                                    <button class="btn btn-outline-success" type="submit" id="button-save">Save</button>
                                </div>
                            </form>
                        </div>
                    </li>
                </ul>
            </div>

